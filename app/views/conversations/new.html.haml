= form_tag "/conversations", :method => :post do
  %p
    = "Send to :"
    = select_tag('conversation[recipient_id]', options_from_collection_for_select(User.recipients(current_user), 'id', 'name'))

  %p
    = "Subject"
    = text_field_tag "conversation[subject]"
  %p  
    = "Message"  
    = text_area_tag "conversation[body]"
  
  = submit_tag "Send"
