.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      %h3
        Plan Types 
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Create', new_plan_type_path, class: "btn btn-success"


.row
  .col-md-12
    .grid.simple
      .grid-body 
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th
              %th

          %tbody           
            - @plan_types.each do |plan_type|
              %tr
                %td= link_to plan_type.name, plan_type
                %td= link_to 'Edit', edit_plan_path(plan_type)
                %td= link_to 'Destroy', plan_type, :method => :delete, :data => { :confirm => 'Are you sure?' }





