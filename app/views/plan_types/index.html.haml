
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        .tools
          %a.collapse{href: "javascript:;"}
      .grid-title.no-border
        %h4
          Plan Types
          = link_to 'Add', new_plan_type_path, class: "btn btn-success btn-small"
        
      .grid-body.no-border
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th
              %th

          %tbody           
            - @plan_types.each do |plan_type|
              %tr
                %td= link_to plan_type.name, plan_type
                %td= link_to 'Edit', edit_plan_path(plan_type)
                %td= link_to 'Destroy', plan_type, :method => :delete, :data => { :confirm => 'Are you sure?' }





