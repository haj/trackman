!!!
%html
  %head
    %title Trackman
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    = include_gon(watch: true)
    = stylesheet_link_tag    'application', media: 'all'
    %script{:src => "//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry", :type => "text/javascript"}
    %script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", :type => "text/javascript"}
    %script{:src => "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js", :type => "text/javascript"}
    %script{:src => "http://google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js", :type => "text/javascript"}
    = javascript_include_tag "https://bridge.paymill.com/", 'application'
    = csrf_meta_tags
    :javascript
      var PAYMILL_PUBLIC_KEY = '82116769296bc2931f43f72dae901142';
  %body.error-body
    / BEGIN HEADER
    .header.navbar.navbar-inverse
      / BEGIN TOP NAVIGATION BAR
      .navbar-inner
        / BEGIN NAVIGATION HEADER
        .header-seperation
          / BEGIN MOBILE HEADER
          %ul#main-menu-toggle-wrapper.nav.pull-left.notifcation-center{:style => "display:none"}
            %li.dropdown
              %a#main-menu-toggle{:href => "#main-menu"}
                .iconset.top-menu-toggle-white
          / END MOBILE HEADER
          / BEGIN LOGO
          =link_to root_path do 
            = image_tag "logo.png", :class => "logo-image logo"
          / END LOGO
          / BEGIN LOGO NAV BUTTONS
          %ul.nav.pull-right.notifcation-center
            %li#header_task_bar.dropdown
              %a.dropdown-toggle.active{"data-toggle" => "", :href => root_path}
                .iconset.top-home
            %li#header_inbox_bar.dropdown
              %a.dropdown-toggle{:href => conversations_path}
                .iconset.top-messages
                - if conversations_count(current_user) != 0
                  %span#msgs-badge.badge= conversations_count(current_user)
          / END LOGO NAV BUTTONS
        / END NAVIGATION HEADER
        / BEGIN CONTENT HEADER
        .header-quick-nav
          / BEGIN HEADER LEFT SIDE SECTION
          .pull-left
            / BEGIN SLIM NAVIGATION TOGGLE
            %ul.nav.quick-section
              %li.quicklinks
                %a#layout-condensed-toggle{:href => "#"}
                  .iconset.top-menu-toggle-dark
            / END SLIM NAVIGATION TOGGLE
          / END HEADER LEFT SIDE SECTION
          / BEGIN HEADER RIGHT SIDE SECTION
          .pull-right
            .chat-toggler
              / BEGIN NOTIFICATION CENTER
              %a#my-task-list.dropdown-toggle{"data-content" => "", "data-original-title" => "Notifications", "data-placement" => "bottom", "data-toggle" => "dropdown", :href => "#"}
                .user-details
                  .username
                    %span.badge.badge-important= notifications_count(current_user)
                    \ #{current_user.try(:first_name).try(:capitalize)}
                    %span.bold
                      \ #{current_user.try(:last_name).try(:capitalize)}
                .iconset.top-down-arrow
              #notification-list{:style => "display:none"}
                %div{:style => "width:300px"}
                  / BEGIN NOTIFICATION MESSAGE
                  - @notifications.each do |notification|
                    .notification-messages.info
                      .user-profile
                        = image_tag gravatar(current_user), :class => "profile-image"
                      .message-wrapper
                        .heading= Alarm
                        .description= notification.try(:alarm).try(:name)
                        .date.pull-left= "#{time_ago_in_words(notification.created_at)} ago"
                      .clearfix
                  / END NOTIFICATION MESSAGE
              / END NOTIFICATION CENTER
              / BEGIN PROFILE PICTURE
              .profile-pic
                = image_tag gravatar(current_user), :class => "profile-image"
              / END PROFILE PICTURE
            / BEGIN HEADER NAV BUTTONS
            %ul.nav.quick-section
              / BEGIN SETTINGS
              %li.quicklinks
                %a#user-options.dropdown-toggle.pull-right{"data-toggle" => "dropdown", :href => "#"}
                  .iconset.top-settings-dark
                %ul.dropdown-menu.pull-right{"aria-labelledby" => "user-options", :role => "menu"}
                  - if current_user.company
                    %li= link_to "User settings", user_path(current_user)
                    %li= link_to "Company settings", company_path(current_user.company.id)
                  %li.divider
                  %li
                    = link_to destroy_user_session_path, method: :delete do
                      %i.fa.fa-power-off>
                      \  Sign out
              / END SETTINGS
              %li.quicklinks
                %span.h-seperate
            / END HEADER NAV BUTTONS
          / END HEADER RIGHT SIDE SECTION
        / END CONTENT HEADER
      / END TOP NAVIGATION BAR
    / END HEADER
    / BEGIN CONTENT
    .page-container.row-fluid
      / BEGIN SIDEBAR
      / BEGIN MENU
      #main-menu.page-sidebar
        #main-menu-wrapper.page-sidebar-wrapper
          / BEGIN SIDEBAR MENU
          %p.menu-title
            ADMINISTRATION
            = render "layouts/menu"
            / END TWO LEVEL MENU
          / END SIDEBAR MENU
      / BEGIN SCROLL UP HOVER
      %a.scrollup{:href => "#"} Scroll
      / END SCROLL UP HOVER
      / END MENU
      / BEGIN SIDEBAR FOOTER WIDGET
      .footer-widget
        .pull-right
          = link_to destroy_user_session_path, method: :delete do
            %i.fa.fa-power-off
      / END SIDEBAR FOOTER WIDGET
      / END SIDEBAR
      / BEGIN PAGE CONTAINER
      .page-content
        - if notice
          %p.alert.alert-notice= notice
        - if alert
          %p.alert= alert
        / BEGIN PlACE PAGE CONTENT HERE
        = yield
