%h1 Listing Device Types

= search_form_for @q, :class => "form-inline" do |f| 
  = f.search_field :name_cont, :placeholder => "Search with name" 
  = f.submit "Search" ,:class => "btn btn-default"

%br

%table.table
  %tr
    = content_tag :th, sort_link(@q, :name)
    %th
    %th
    %th

  - @device_types.each do |device_type|
    %tr
      %td= device_type.name
      %td= link_to 'Show', device_type
      %td= link_to 'Edit', edit_device_type_path(device_type)
      %td= link_to 'Destroy', device_type, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Device type', new_device_type_path
