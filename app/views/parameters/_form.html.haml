= form_for @parameter do |f|
  - if @parameter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parameter.errors.count, "error")} prohibited this parameter from being saved:"
      %ul
        - @parameter.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
  .form-group
    = f.label :type, class: "form-label"
    = f.text_field :type, class: "form-control"
  .form-group
    = f.label :rule_id, class: "form-label"
    = f.number_field :rule_id, class: "form-control"
  .form-group
    = f.submit 'Save', class: "btn btn-primary"
