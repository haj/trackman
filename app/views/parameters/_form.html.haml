= form_for @parameter do |f|
  - if @parameter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parameter.errors.count, "error")} prohibited this parameter from being saved:"
      %ul
        - @parameter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :rule_id
    = f.number_field :rule_id
  .actions
    = f.submit 'Save'
