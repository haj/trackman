
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h4
          &nbsp;
        .tools
          %a.collapse{href: "javascript:;"}
          %a.config{"data-toggle" => "modal", href: "#grid-config"}
          %a.reload{href: "javascript:;"}
      .grid-body.no-border
        %h3
          Parameters
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th Type
              %th Rule
              %th
              %th
              %th

          %tbody           
            - @parameters.each do |parameter|
              %tr
                %td= parameter.name
                %td= parameter.type
                %td= parameter.rule_id
                %td= link_to 'Show', parameter
                %td= link_to 'Edit', edit_parameter_path(parameter)
                %td= link_to 'Destroy', parameter, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br


= link_to 'New Parameter', new_parameter_path, class: "btn btn-success"
