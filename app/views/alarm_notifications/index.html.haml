.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h3
          Alarm notifications
        
      .grid-body.no-border
        %table.table.no-more-tables
          %thead
            %tr
              %th Car
              %th Alarm
              %th Triggered at
          %tbody
            
            - @alarm_notifications.each do |alarm_notification|
              %tr
                %td= link_to alarm_notification.car.numberplate, alarm_notification.car
                %td= link_to alarm_notification.alarm.name, alarm_notification.alarm
                %td= alarm_notification.created_at
%br


