
.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      %h3
        Regions List 
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Create', new_region_path, class: "btn btn-success"


.row
  .col-md-12
    .grid.simple
      .grid-body
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th
              %th

          %tbody           
            - @regions.each do |region|
              %tr
                %td= link_to region.name, region
                %td= link_to 'Edit', edit_region_path(region)
                %td= link_to 'Destroy', region, :method => :delete, :data => { :confirm => 'Are you sure?' }



