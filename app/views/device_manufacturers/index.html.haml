
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h4
          Search
        .tools
          %a.collapse{href: "javascript:;"}
      .grid-body.no-border
        = search_form_for @q, :class => "form-inline" do |f|
          .form-group 
            = f.search_field :name_cont, :placeholder => "Search with name" 
          .form-group
            = f.submit "Search" ,:class => "btn btn-default"


.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        .tools
          %a.collapse{href: "javascript:;"}
      .grid-title.no-border
        %h3
          Device Manufacturers
          = link_to 'Add', new_device_manufacturer_path, class: "btn btn btn-success btn-small"

        
      .grid-body.no-border
          
        %table.table.no-more-tables
          %thead
            %tr
              = content_tag :th, sort_link(@q, :name)
              %th
              %th
              %th
          %tbody
            
            - @device_manufacturers.each do |device_manufacturer|
              %tr
                %td= device_manufacturer.name
                %td= link_to 'Show', device_manufacturer
                %td= link_to 'Edit', edit_device_manufacturer_path(device_manufacturer)
                %td= link_to 'Destroy', device_manufacturer, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br


