.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h3
          = Device
      .grid-body.no-border
        .form-group
          %b Emei:
          = @device.emei
        .form-group
          %b Cost price:
          = @device.cost_price
        .form-group
          %b Device Model:
          = link_to @device.try(:device_model).try(:name), @device.try(:device_model)
        .form-group
          %b Device Type:
          = link_to @device.try(:device_type).try(:name), @device.try(:device_type)
        .form-group
          %b Car:
          = link_to @device.try(:car).try(:numberplate).to_s , @device.car
        .form-group
          %b Simcard:
          = link_to @device.try(:simcard).try(:telephone_number).to_s , @device.try(:simcard)

        = link_to 'Edit', edit_device_path(@device)
        \|
        = link_to 'Back', devices_path
