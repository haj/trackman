
.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      %h3
        Rules List 
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Create', new_rule_path, class: "btn btn-success"

.row
  .col-md-12
    .grid.simple
      .grid-body 
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th # of parameters
              %th
              %th

          %tbody           
          - @rules.each do |rule|
            %tr
              %td= link_to rule.name, rule
              %td= rule.params.count
              %td= link_to 'Edit', edit_rule_path(rule)
              %td= link_to 'Destroy', rule, :method => :delete, :data => { :confirm => 'Are you sure?' }


