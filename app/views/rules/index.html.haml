
.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        .tools
          %a.collapse{href: "javascript:;"}
      .grid-title.no-border
        %h4
          Rules
          = link_to 'Add', new_rule_path, class: "btn btn-success btn-small"
        .grid-body.no-border
          %table.table.no-more-tables
            %thead
            %tr
              %th Name
              %th # of parameters
              %th
              %th
              %th

            %tbody           
            - @rules.each do |rule|
              %tr
              %td= rule.name
              %td= rule.params.count
              %td= link_to 'Show', rule
              %td= link_to 'Edit', edit_rule_path(rule)
              %td= link_to 'Destroy', rule, :method => :delete, :data => { :confirm => 'Are you sure?' }


