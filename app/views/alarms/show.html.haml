.row
  .col-md-12
    .page-title
      = link_to raw("<i class='icon-custom-left'></i>"), alarms_path
      %h3
        Alarm
.row
  .col-md-6
    .grid.simple
      .grid-body
        %p
          %b Name :
          = @alarm.name
        %p
          %b Rules :        
          %ul
            - @alarm.rules.each do |rule|
              %li= rule_with_params(rule,@alarm)

        = link_to 'Edit', edit_alarm_path(@alarm)
        \|
        = link_to 'Back', alarms_path
