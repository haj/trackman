.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      = link_to raw("<i class='icon-custom-left'></i>"), alarms_path
      %h3
        Alarm
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Edit', edit_alarm_path(@alarm), class: "btn btn-success"
         
.row
  .col-md-12
    .grid.simple
      .grid-body
        %p
          %b Name :
          = @alarm.name
        %p
          %b Rules :        
          %ul
            - @alarm.rules.each do |rule|
              %li= rule.description