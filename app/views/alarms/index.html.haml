.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        .tools
          %a.collapse{href: "javascript:;"}
      .grid-title.no-border
        %h4
          Alarms
          = link_to 'Add', new_alarm_path, class: "btn btn-success btn-small"
      .grid-body.no-border 
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th
              %th
          %tbody
            
            - @alarms.each do |alarm|
              %tr
                %td= alarm.name
                %td= link_to 'Show', alarm
                %td= link_to 'Destroy', alarm, :method => :delete, :data => { :confirm => 'Are you sure?' }


