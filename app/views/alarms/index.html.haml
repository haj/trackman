.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      %h3
        Alarms List
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Create', new_alarm_path, class: "btn btn-success"

.row
  .col-md-12
    .grid.simple
      .grid-body
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th 
          %tbody
            - @alarms.each do |alarm|
              %tr
                / %td= link_to alarm.name, alarm, remote: true
                %td= link_to alarm.name, alarm
                %td
                  = link_to alarm, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                    %i.fa.fa-times
                    Destroy


/ = render 'modal'