= form_for @alarm do |f|
  - if @alarm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@alarm.errors.count, "error")} prohibited this alarm from being saved:"
      %ul
        - @alarm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
