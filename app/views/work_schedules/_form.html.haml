    #error_explanation
      %h2= "#{pluralize(@work_schedule.errors.count, "error")} prohibited this work_schedule from being saved:"
      %ul
        - @work_schedule.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :car_id, :class => "form-label"
    = f.number_field :car_id, :class => "form-control"

  .form-group
    = f.label :name, :class => "form-label", :class => "form-label"
