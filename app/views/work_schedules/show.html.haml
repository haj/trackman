.row
  .col-md-12
    .grid.simple
      .grid-title.no-border
        %h3
          Work schedule
      .grid-body.no-border
        .form-group
          %b Name:
          = @work_schedule.name
        .form-group
          - @work_schedule.work_hours.each do |work_hour|
            = work_hour.day_of_week
            = work_hour.starts_at
            = work_hour.ends_at


        = link_to 'Edit', edit_work_schedule_path(@work_schedule)
        \|
        = link_to 'Back', work_schedules_path
