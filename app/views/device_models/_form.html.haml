= form_for @device_model do |f|
  - if @device_model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device_model.errors.count, "error")} prohibited this device_model from being saved:"
      %ul
        - @device_model.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :device_manufacturer
    = f.collection_select(:device_manufacturer_id, DeviceManufacturer.all, :id, :name)
  .field
    = f.label :protocol
    = f.text_field :protocol
  .actions
    = f.submit 'Save'
