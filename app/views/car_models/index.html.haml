.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      %h3
        Vehicle Models List
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Create', new_car_model_path, class: "btn btn-success"

.row
  .col-md-4
    .row 
      .col-md-12
        .grid.simple
          .grid-title 
            %h4
              Search
            .tools
              %a.collapse{href: "javascript:;"}
          .grid-body
            = search_form_for @q, :class => "form-inline" do |f| 
              .form-group
                = f.search_field :name_cont, :placeholder => "Search with name" 
              .form-group
                = f.submit "Search" ,:class => "btn btn-default"
    .row
      .col-md-12
        .grid.simple
          .grid-title
            %h4
              Filter by Car Models
            .tools
              %a.collapse{href: "javascript:;"}
          .grid-body
            = form_tag '', :method => :get do
              %p
                = select_tag( :by_car_manufacturer, options_for_select(all_car_manufacturers, params[:by_car_manufacturer]), :include_blank => "Car Models ...")
              %p
                = submit_tag 'Filter', :class => "btn btn-primary"
    


  .col-md-8
    .grid.simple
      .grid-body 
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th Vehicle Manufacturer
              %th
              %th
          %tbody  
            - @car_models.each do |car_model|
              %tr
                %td= link_to car_model.name, car_model
                %td= car_model.try(:car_manufacturer).try(:name)
                %td= link_to 'Edit', edit_car_model_path(car_model)
                %td= link_to 'Destroy', car_model, :method => :delete, :data => { :confirm => 'Are you sure?' }



