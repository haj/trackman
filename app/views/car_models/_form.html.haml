= form_for @car_model do |f|
  - if @car_model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car_model.errors.count, "error")} prohibited this car_model from being saved:"
      %ul
        - @car_model.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-md-6
      .grid.simple
        .grid-title
          %h4
            Car Model 
            %span.semi-bold details
          .tools
            %a.collapse{href: "javascript:;"}
        .grid-body
          .row
            .col-md-8.col-sm-8.col-xs-8
              .form-group
                = f.label :name, :class => "form-label"
                = f.text_field :name, :class => "form-control"
              .form-group
                = f.label :car_manufacturer, :class => "form-label"
                = f.collection_select(:car_manufacturer_id, CarManufacturer.all, :id, :name, {}, :class => "form-control") 

  .row
    .col-md-12
      .form-group
        = f.submit 'Save', class: "btn btn-primary"

