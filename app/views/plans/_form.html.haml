= form_for @plan do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name


  %h3 Pricing

  #pricings
  = f.fields_for :pricings do |pricing|
    = render 'pricing_fields', :f => pricing
  .links
    = link_to_add_association 'add pricing', f, :pricings

  .actions
    = f.submit 'Save'
