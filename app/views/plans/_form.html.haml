= form_for @plan do |f|
  - if @plan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan.errors.count, "error")} prohibited this plan from being saved:"
      %ul
        - @plan.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :interval, class: "form-label"
    = f.text_field :interval, class: "form-control", placeholder: "Number of days"        

  .form-group
    = f.label :price, class: "form-label"
    = f.text_field :price, class: "form-control"

  .form-group
    = f.label :currency, class: "form-label"
    = f.text_field :currency, class: "form-control"

  .form-group
    = f.label :plan_type_id, class: "form-label"
    = f.collection_select(:plan_type_id, PlanType.all, :id, :name)

  .actions
    = f.submit 'Save', class: "btn btn-primary"
