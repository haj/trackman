.row
  .col-md-8.col-lg-8.col-sm-8.col-xs-8 
    .page-title
      = link_to raw("<i class='icon-custom-left'></i>"), companies_path
      %h3
        Company  
  .col-md-4.col-lg-4.col-sm-4.col-xs-4 
    .pull-right= link_to 'Edit', edit_company_path(@company), class: "btn btn-success"

.row
  .col-md-12
    .grid.simple
      .grid-body 
        %p
          %strong Name:
          = @company.id
        %p
          %strong Name:
          = @company.name
        %p
          %strong Subdomain:
          = @company.subdomain
        %p
          %strong Time zone:
          = @company.time_zone
        %p
          %strong Billing plan:
          = @company.try(:current_plan).try(:name)
          = link_to "(Change)", plans_path


.row
  .col-md-12
    .grid.simple
      .grid-body  
        %table.table.no-more-tables
          %thead
            %tr
              %th Name
              %th Email
              %th Roles

          %tbody           
            - @employees.each do |user|
              %tr
                %td= link_to user.name, user
                %td= user.email
                %td= user.roles.to_a.join(', ')
